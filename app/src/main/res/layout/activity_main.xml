<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IdleActivity"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

    <Button
            android:id="@+id/btnSend"
            android:text="@string/update_text"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edMessageToSend"
            app:layout_constraintBottom_toTopOf="@id/tvMessageBox"/>
    <EditText
            android:id="@+id/edMessageToSend"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toStartOf="@+id/btnSend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints="Ip Address" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/tvMessageBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edMessageToSend"/>
    <GridView
            android:id="@+id/gvButtonHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMessageBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:numColumns="4"
    android:horizontalSpacing="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>